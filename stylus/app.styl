// svgerber stylesheet

#dropzone
  margin-top 25px
  margin-bottom 25px
  padding-top 100px
  padding-bottom 100px
  text-align center
  border thin dashed black
  border-radius 10px

#file-upload-select
  display none

#filelist
  li
    margin 10px

#individual-layer-output
  margin-top 50px
  margin-bottom 50px
  text-align center

.progress
  margin-top 20px

.filename
  margin-bottom 0
  font-size 18px

.layer-type-select
  font-size 16px

.layer-container
  margin-top 20px
  margin-bottom 20px
  text-align center

.layer-drawing
  svg
    overflow visible

.js-template
  display none

.progress
  position relative

.progress-bar
  transition width 1ms
  position absolute
  left 0

.progress-bar-success
  height 50%

.plot-progress-bar
  background-color blue

.draw-progress-bar
  background-color green

footer
  text-align center
  margin-top 50px
