// svgerber stylesheet

// body padding for fixed navbar
body
  padding-top 64px

#top-nav
  h1
    margin-top 10px
    margin-bottom 10px
    font-size 32px

  .nav
    li
      margin-left 0
      height 100%

    .octicon
      text-align center
      font-size 20px
      padding-top 10px
      padding-bottom 10px
      margin-top 10px
      margin-bottom 2px

#dropzone
  margin-top 25px
  margin-bottom 25px
  padding-top 100px
  padding-bottom 100px
  text-align center
  border thin dashed black
  border-radius 10px

#file-upload-select
  display none

#filelist
  li
    height 48px
    margin 10px

  .filelist-item
    height 100%

  .mega-octicon
    font-size 48px

  .progress
    height 100%

  .progress-bar
    transition width 30ms

// process button
#process
  margin-top 20px
  margin-bottom 20px

#individual-layer-output
  margin-top 50px
  margin-bottom 50px
  text-align center

.filename
  margin-bottom 0
  font-size 18px

.layer-type-select
  font-size 16px

.layer-container
  margin-top 20px
  margin-bottom 20px
  text-align center

.layer-drawing
  svg
    overflow visible

.js-template
  display none

footer
  text-align center
  margin-top 50px
