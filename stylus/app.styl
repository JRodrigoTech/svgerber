// svgerber stylesheet
// bring in bootstrap
@require "../bower_components/bootstrap/dist/css/bootstrap.css"
// bring in octicons
@import "../bower_components/octicons/octicons/octicons.css"

// body padding for fixed navbar
body
  padding-top 50px

#top-nav-spacer
  height 50px

