{
  "name"            : "svgerber.cousins.io",
  "version"         : "0.0.1",
  "description"     : "Client-side Gerber file to SVG converter",
  "repository" : {
    "type" : "git",
    "url"  : "git://github.com/mcous/svgerber.git"
  },
  "browser" : {
    "jquery"    : "./bower_components/jquery/dist/jquery.js",
    "bootstrap" : "./bower_components/bootstrap/dist/js/bootstrap.js",
    "svg.js"    : "./bower_components/svg.js/dist/svg.js"
  },
  "browserify" : {
    "transform" : [
      "browserify-shim",
      "coffeeify"
    ],
    "noParse" : [
      "./bower_components/jquery/dist/jquery.js",
      "./bower_components/bootstrap/dist/js/bootstrap.js",
      "./bower_components/svg.js/dist/svg.js"
    ]
  },
  "browserify-shim" : {
    "jquery"    : "$",
    "bootstrap" : { "depends" : [ "jquery:$" ] },
    "svg.js" : "SVG"
  },
  "devDependencies" :
  {
    "jade"                : "*",
    "stylus"              : "*",
    "coffee-script"       : "*",
    "node-static"         : "*",
    "jasmine-node"        : "*",
    "uglify-js"           : "*",
    "bower"               : "*",
    "browserify"          : "*",
    "coffeeify"           : "*",
    "browserify-shim"     : "*",
    "vinyl-source-stream" : "*",
    "minimist"            : "*",
    "gulp"                : "*",
    "gulp-stylus"         : "*",
    "gulp-autoprefixer"   : "*",
    "gulp-minify-css"     : "*",
    "gulp-jade"           : "*",
    "gulp-uglify"         : "*",
    "gulp-livereload"     : "*",
    "gulp-notify"         : "*",
    "gulp-rimraf"         : "*"
  }
}
